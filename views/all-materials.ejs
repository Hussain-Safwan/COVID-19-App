<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
<script>
    let isOpen = false
    $('.span-opener').click((e) => {
        if (!isOpen) {
            $('#pane').fadeIn()
            $('.span-opener i').toggleClass('rotate')
            isOpen = true
        } else {
            $('#pane').fadeOut()
            $('.span-opener i').toggleClass('rotate')
            isOpen = false
        }
    })

    $('#search-btn').click((e) => {
        const search = $('#search').val()
        if (search.length != 0) {

            $('#search-input').val(search)
            console.log($('#search-input').val())
            $('#search-form').submit()
        }
    })
    $('#new-test-btn').click((e) => {
        location = '/app-admin/create-test'
    })
    $('img').click((e) => {
        location = `/users/single-material/${e.target.id}`
    })
</script>

</html>