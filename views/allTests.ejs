<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/test.css">
    <title>Assessment Tests</title>
</head>

<body>
    <div class="pageWrapper">
        <div class="top-bar">
            <div class="heading">
                <p>Mental Assessment Tests</p>
            </div>
            <div class="search-box">
                <input type="text" id="search-input" placeholder="Type to search">
            </div>
        </div>
        <div class="contentWrapper">

            <hr>
            <div class="left">

                <div class="tests-space">
                    <% if (errorMessage.length != 0) { %>
                        <div class="alert alert-danger">
                            <%= errorMessage %>
                        </div>
                        <% } %>
                            <% for (let i=0; i<data.length; i++) { %>
                                <div class="each-test">
                                    <div class="left">
                                        <div class="image">
                                            <img src="<%= data[i].thumbnail %>" alt="">
                                        </div>
                                    </div>
                                    <div class="right">
                                        <div class="texts">
                                            <div class="category">
                                                <%= data[i].category %>
                                            </div>
                                            <div class="title">
                                                <a href="/app-admin/single-test/<%= data[i]._id %>">
                                                    <%= data[i].title %>
                                                </a>
                                            </div>
                                            <div class="body">
                                                <%= data[i].about %>
                                            </div>
                                            <div class="add-info">
                                                <% const time = Math.round(data[i].questionSet.length / 1.5) %>
                                                    <span><%= data[i].questionSet.length %> Questions &#8226 <%= time %> Minutes</span>
                                                    <span class="for"><%= data[i].ageRange %></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                </div>
            </div>
            <div class="right">
                <div class="related">
                    <div class="heading">People also take</div>
                    <div class="tests-space">
                        <% for (let i=0; i<related.length; i++) { %>
                            <div class="each-test">
                                <div class="image">
                                    <img src="<%= related[i].thumbnail %>" alt="">
                                </div>
                                <div class="texts">
                                    <div class="title">
                                        <%= related[i].title %>
                                    </div>
                                    <div class="category">
                                        <%= related[i].category %>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>