<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/prism-okaidia.css">
    <link rel="stylesheet" href="/css/readmore.css">
    <title>
        <%= posts.title %>
    </title>
</head>

<body>
    <div class="contentWrapper">
        <div class="pageContent" style="margin-top: 80px;">
            <div class="left">
                <div class="post">
                    <div class="title" style="display: flex; justify-content: space-between;">
                        <%= posts.title %>
                        <% if (previlege  == 'true') { %>
                            <div style="display: flex;">
                                <button class="btn btn-info" id="edit-btn">Edit</button>
                                <button class="btn btn-danger" style="margin-left: 5px;" id="delete-btn"><i class="fa fa-trash"></i></button>
                            </div>
                            <% } %>
                    </div>
                    <div class="tags">
                        <% for (let i=0; i<3; i++) { %>
                            <a href="#" class="each-tag">
                                <%= posts.tags[i] %>
                            </a>
                            <% } %>
                    </div>
                    <div class="subtitle">
                        <div class="left">
                            <div class="image">
                                <img src="data:image/png;base64," alt="">
                            </div>
                            <div class="user-date">
                                <div class="user">
                                    <%= posts.author %>
                                </div>
                                <div class="date">
                                    <%= posts.date %>
                                </div>
                            </div>
                        </div>
                        <div class="right">
                            
                        </div>

                    </div>
                    <div class="cover">
                        <img src="<%= posts.thumbnail %>" alt="">
                    </div>
                    <div class="body">
                        <%- posts.body %>
                    </div>
                </div>
            </div>
            <div class="right">
                <div class="related-section">
                    <div class="title">Recently Added</div>
                    <div class="posts">
                        <% relatedPosts.forEach(post => { %>
                            <a href="/users//view/<%= post._id %>">
                                <div class="eachRelatedPost">
                                    <div class="thumbnail">
                                        <img src="<%= post.thumbnail %>" alt="">
                                    </div>
                                    <div class="texts">
                                        <div class="title">
                                            <%= post.title %>
                                        </div>
                                        <div class="author">
                                            <%= post.author %>
                                        </div>
                                    </div>
                                </div>
                            </a>
                            <% }) %>
                    </div>
                </div>
            </div>


        </div>
        <!-- <div class="disqus" id="disqus_thread"></div> -->

    </div>
    <input type="hidden" value="<%= posts._id %>" id="id">
</body>
<script>
    $('#edit-btn').click(e => {
        const id = $('#id').val()
        location = '/edit-resource/' + id
    })
    $('#delete-btn').click(e => {
        const id = $('#id').val()
        location = '/users/delete-resource/' + id
    })
</script>

</html>