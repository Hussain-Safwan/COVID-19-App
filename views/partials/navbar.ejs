<script>
    let open = false
    let auth = false
    $('#spans').click((e) => {
        if (!open) {
            open = true
            $('#options-pane').css('visibility', 'visible')
            $('#options-pane').width('65%');
            $("#options-pane").height($(document).height())
        } else {
            open = false
            $('#options-pane').css('visibility', 'hidden')
            document.getElementById('options-pane').style.width = '0px'
        }
    })
    $.get('/admin/getUser', (data) => {
        if (data) {
            auth = data
            const fname = data.name.split(' ')[0]
            $('#logger').html(fname)
            $('#logger').attr('href', '/admin/logout')
            $('#logger').attr('title', 'Signed in. Click to sign out')
        }
    })
    $('#connect-with-experts').click((e) => {
        if (auth) {
            location = `http://trin-innovation.com/services/emergencyAppointment?name=${auth.name}&age=${auth.age}&email=${auth.email}&phone=${auth.phoneNumber}`
        } else {
            M.toast({
                html: 'Please log in to connect with the experts'
            })
        }
    })
</script>