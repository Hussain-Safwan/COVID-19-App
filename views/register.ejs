    <div class="form-area">
        <div class="logo">
            <img class="logo_img" src="/images/black_cat_logo.jpg" alt="">
        </div>
        <form id="form-reg" action="/admin/register" method="POST">

            <div class="form-reg">
                <div class="label">Name</div>
                <div class="name input">
                    <input type="text" name="nameN" id="">
                </div>
                <div class="label">Username</div>
                <div class="username input">
                    <input type="text" name="usernameN" id="">
                </div>
                <div class="label">Email</div>
                <div class="email input">
                    <input type="email" name="emailN" id="">
                </div>
                <div class="label">Password</div>
                <div class="password input">
                    <input type="password" name="passwordN" id="">
                </div>
                <div class="submit">
                    <button class="submit-btn">Submit</button>
                </div>
            </div>
        </form>
        <br>
        <div class="links">
            <p>Have an account? <a href="/admin/login">Login</a></p>
        </div>
    </div>

